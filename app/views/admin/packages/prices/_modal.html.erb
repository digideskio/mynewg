<div aria-hidden="true" aria-labelledby="packagePriceModalLabel" class="modal fade" id="package-price-form" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for [:admin, @package, @price], url: url, html: { role: 'form', id: 'amend_package_price', 'data-method' => method }, remote: true, format: :json do |f| %>
        <div class="json" id="errors">
          <ul></ul>
        </div>
        <div class="modal-header">
          <h3 id="packagePriceModalLabel">
            <% if @price.id.nil? %>Add Price<% else %>Edit Price<% end %>
          </h3>
        </div>
        <div class="modal-body">
          <fieldset class="widget widget-content widget-last">
            <div class="form-group">
              <%= f.label :gender %>
              <%= f.select :gender, options_for_select([['Female', 'female'], ['Male', 'male']], @price.gender), { include_blank: nil }, { :class => 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.label :interval %>
              <%= f.text_field :interval, :class => 'form-control' %>
            </div>
            <div class="form-group form-last">
              <%= f.label :value %>
              <%= f.text_field :value, :class => 'form-control' %>
            </div>
          </fieldset>
        </div>
        <div class="modal-footer">
          <button class="btn btn-danger btn-large" data-dismiss="modal" type="button">Close</button>
          <%= f.submit 'Submit', :class => 'btn btn-primary btn-large' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
