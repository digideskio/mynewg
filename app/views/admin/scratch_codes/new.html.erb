<div class="row">
  <div class="col-md-12">
    <%= link_to '',
        admin_codes_path,
        class: 'btn btn-primary btn-fab btn-raised mdi-content-reply pull-right' %>
    <h1><i class="fa fa-ticket"></i> Scratch <%= "#{t('admin.code')} #{t('admin.manager')}" %></h1>
    <hr>
  </div>
</div>


<%= form_for(:codes, url: admin_scratch_codes_path) do |f| %>
  <div class="row panel">
    <div class="col-md-3">
      <h3>How Many New Codes?</h3>
      <p>Set the number of codes you would to generate</p>
    </div>

    <div class="col-md-9">
      <fieldset class="widget widget-content">
        <div class="form-group">
          <%= f.number_field :count, :id => 'code-new', class: 'form-control', value: '10', min: 1, max: 100 %>
        </div>
      </fieldset>
      <div class="form-action">
          <%= f.submit 'Create', class: 'btn btn-success btn-large pull-right' %>
        </div>
    </div>
  </div>

  <%= f.hidden_field :type, value: 'SC' %>
<% end %>
