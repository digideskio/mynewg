<div class="row">
  <div class="col-md-12">
    <%= link_to '', admin_members_path, class: 'btn btn-primary btn-fab btn-raised mdi-content-reply pull-right' %>
    <h1><i class="fa fa-user-plus"></i> <%= "#{t('admin.add_new')} #{t('admin.member')}" %></h1>
    <hr>
  </div>
</div>

<%= nested_form_for @member, url: admin_members_path do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, 'error') %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= render partial: 'form', locals: { f: f } %>

  <div class="row panel">
    <div class="col-md-3">
      <h4><%= t('admin.security') %></h4>
      <p><%= t('admin.security_desc') %></p>
    </div>

    <div class="col-md-9">
      <fieldset class="widget widget-content widget-last">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </fieldset>

      <div class="form-action">
        <%= f.submit t('admin.submit'), class: 'btn btn-success btn-large pull-right' %>
      </div>
    </div>
  </div>
<% end %>
