<div class="row panel">
  <div class="col-md-3">
  </div>

  <div class="col-md-9">
    <fieldset class="widget widget-content">
      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :value %>
        <%= f.text_field :value, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :gender %>
        <%= f.select :gender, options_for_select([['Both', 'both'], ['Female', 'female'], ['Male', 'male']], @discount_code.discount_type), {}, class: 'form-control' %>
      </div>
    </fieldset>
  </div>
</div>


<div class="row panel">
  <div class="col-md-3">
    <h4>Public Access</h4>
  </div>

  <div class="col-md-9">
    <fieldset class="widget widget-content">
      <div class="form-group">
        <label>Yes</label>
        <%= f.radio_button :public, true, style: "opacity: 1;  height: auto; width: auto; overflow: visible" %>
        <br>
        <label>No</label>
        <%= f.radio_button :public, false, style: "opacity: 1;  height: auto; width: auto; overflow: visible" %>
      </div>
    </fieldset>
  </div>
</div>

<div class="row panel">
  <div class="col-md-3">
  </div>

  <div class="col-md-9">
    <fieldset class="widget widget-content">
      <div class="form-group">
        <%= f.label :discount_type %>
        <%= f.select :discount_type, options_for_select([['Number', 'number'], ['Percentage', 'percentage']], @discount_code.discount_type), {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :price_type %>
        <%= f.select :price_type, options_for_select([['Single', 'single'], ['Recurring', 'recurring']], @discount_code.price_type), {}, class: 'form-control' %>
      </div>
    </fieldset>
  </div>
</div>

<div class="row panel">
  <div class="col-md-3">
  </div>
  <div class="col-md-9">
    <fieldset class="widget widget-content widget-last">
      <% if @packages.empty? %>
          <div class="helper-notification">
            <p>You do not have any published packages yet.</p>
            <i class="fa fa-th-large"></i>
          </div>
      <% else %>
          <div class="form-group">
            <%= label_tag 'Packages' %>
            <%= f.collection_select :package_ids, @packages, :id, :name, {}, {:class => 'chosen', multiple: true, data: {placeholder: "Select packages..."}} %>
          </div>
      <% end %>
    </fieldset>
    <div class="form-action">
      <%= f.submit t('admin.submit'), class: 'btn btn-success btn-large pull-right' %>
    </div>
  </div>
</div>
